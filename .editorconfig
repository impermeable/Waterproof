root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Google style guide requires 2-space indent.
[e2e/**.js]
indent_style = space
indent_size = 2
continuation_indent_size = 4

[src/**.{ts,js}]
indent_style = space
indent_size = 2
continuation_indent_size = 4

[test/**.{js,ts}]
indent_style = space
indent_size = 2
continuation_indent_size = 4
